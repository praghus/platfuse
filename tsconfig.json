{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "@types",
        "importHelpers": true,
        "skipLibCheck": true,
        "types": ["node"],
        "typeRoots": ["node_modules/@types"]
    }
}
